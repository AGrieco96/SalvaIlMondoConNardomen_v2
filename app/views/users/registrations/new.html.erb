<div class="spazio"><!-- scss spazio dentro static_pages.scss -->
    <h1 id="titolostore">  Nardomen's Sign UP </h1>

    <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 divup">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title"><h4 id="sign-in">Sign Up</h4></div>
                <div class="divlink">
                </div>
            </div>  
            <div class="panel-body" >
                <!-- Default form register -->
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html =>{class:"form-horizontal new_user"} )do |f| %>
                <%= devise_error_messages! %>
                    
                    <div id="signupalert" style="display:none" class="alert alert-danger">
                        <p>Error:</p>
                        <span></span>
                    </div>
                    
                    <!-- Nickname name -->
                    <div class="form-group">
                        <%= f.label :nickname ,class:"col-md-3 control-label"%>
                        <div class="col-md-9">
                            <%= f.text_field :nickname, autofocus: true ,class:"form-control" %>
                        </div>
                    </div>
                    <!-- Name camp -->
                    <div class="form-group">
                        <%= f.label :name ,class:"col-md-3 control-label"%>
                        <div class="col-md-9">
                            <%= f.text_field :name, autofocus: true ,class:"form-control" %>
                        </div>
                    </div>
                    <!-- Last name -->
                    <div class="form-group">
                        <%= f.label :last_name ,class:"col-md-3 control-label"%>
                        <div class="col-md-9">
                            <%= f.text_field :last_name, autofocus: true ,class:"form-control" %>
                        </div>
                    </div>

                    <!-- E-mail -->
                    <div class="form-group">
                      <%= f.label :email ,class:"col-md-3 control-label"%>
                      <div class="col-md-9">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control" %>
                      </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :password ,class:"col-md-3 control-label"%>
                        <div class="col-md-9">
                            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
                            <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %> characters minimum)</em>
                            <% end %>
                        </div>
                    </div>

                    <div class="form-group">
                      <%= f.label :password_confirmation ,class:"col-md-3 control-label" %>
                      <div class="col-md-9">
                        <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control" %>
                      </div>
                    </div>

                    <div class="form-group">
                        <!-- Button -->                                        
                        <div class="col-md-offset-3 col-md-9">
                            <%= f.submit  "Sign up", class:"btn btn-info" %>
                        </div>
                    </div>
                    <div class="fotdiv"  class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <!-- Social register -->
                            <p>or sign up with:</p>
                            <%= link_to "", omniauth_authorize_path(resource_name, 'facebook'), class: "light-blue-text mx-2 fa fa-facebook" , type: "button"%>
                            <%= link_to "", omniauth_authorize_path(resource_name, 'twitter'), class: "light-blue-text mx-2 fa fa-twitter" , type: "button"%>
                            <br><br>
                            <!-- Default form register -->
                            <p>Already a member? <%= link_to "Login" , new_user_session_path %></p>
                            <br>
                            
                        </div>                                           
                    </div>
                <%end%>
            </div>
        </div>
    </div> 
</div>
